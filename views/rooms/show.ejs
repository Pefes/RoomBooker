<% include ../partials/header %> 


<h1>Show page</h1>
<hr>

<a href="/rooms" class="btn btn-dark" id="backButton">&lt&lt Back</a>

<table class="table table-striped table-dark">
  <tbody>
    <tr>
      <th scope="row">Name:</th>
      <td><%= room.name %></td>
    </tr>
    <tr>
      <th scope="row">Size:</th>
      <td><%= room.roomSize %></td>
    </tr>
    <tr>
      <th scope="row">Floor:</th>
      <td><%= room.roomLocation.floor %></td>
    </tr>
    <tr>
      <th scope="row">Sector:</th>
      <td><%= room.roomLocation.sector %></td>
    </tr>
    <tr class="table-dark">
      <th scope="row"></th>
      <td></td>
    </tr>
    <tr>
        <th scope="row">Reservations:</th>
    </tr>
    <% room.reservations.forEach(function(reservation){ %>
        <tr>
            <th scope="row">â€¢ <%= reservation.username %></th>
            <td><%= reservation.start.split("T").join(" ").split("+")[0].slice(0, -3) %> - <%= reservation.end.split("T").join(" ").split("+")[0].slice(0, -3) %></td>
        </tr>
    <% }); %>
  </tbody>
</table>


<% include ../partials/footer %> 