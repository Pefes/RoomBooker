<% include ../partials/header %> 


<h1 class="title">Add new room!</h1>
<hr>
<a href="/rooms" class="btn btn-dark" id="backButton">&lt&lt Back</a>

<div class="row">
    <form action="/rooms" method="POST" id="formRoom">
        <div class="roomForm">
            <div class="form-group">
                <input class="form-control" maxlength="15" autocomplete="off" required type="text" name="name" placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control" maxlength="15" autocomplete="off" required type="number" name="roomSize" placeholder="size">
            </div>
            <div class="form-group">
                <input class="form-control" maxlength="15" autocomplete="off" required type="number" name="floor" placeholder="floor">
            </div>
            <div class="form-group">
                <input class="form-control" maxlength="15" autocomplete="off" required type="text" name="sector" placeholder="sector">
            </div>
        </div>
        <div class="form-group roomForm">
            <button class="btn btn-lg btn-primary btn-block">
                Add room!
            </button>
            <input class="form-control" type="button" value="Reset" id="reset">
        </div>
    </form>
</div>


<% include ../partials/footer %> 