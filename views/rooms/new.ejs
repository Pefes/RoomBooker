<% include ../partials/header %> 

<div class="container">
    <h1>Add new room!</h1>
    <div class="row">
        <div>
            <form action="/rooms" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="room's name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="roomSize" placeholder="room's size">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="floor" placeholder="floor">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="sector" placeholder="sector">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">
                        Submit!
                    </button>
                </div>
            </form>
            <a href="/rooms">Go back...</a>
        </div>
    </div>
</div>



